<body style="background-color:rgb(135,240,220)"></body>
<h1> <b><center> Welcome To Social World</center></b></h1>

<% provide(:title, "LOG IN") %>
<p>New user? <%= link_to "Sign up now!",  new_user_path %></p>
<h2>LOG IN</h2>

<div class="row">
<div class="col-md-6 col-md-offset-3">

<%= form_for(:session, url: sessions_path) do |f| %>

<%= f.label :email  %> / <%= f.label :user_name  %>

<%= f.text_field :user_name , placeholder: "Username" %>

<%= f.label :password %>
<%= f.password_field :password , placeholder: "Password" %>

<%= f.submit "Log in", class: "btn btn-primary" %>
<% end %>
<%= link_to "Forgot Password",  new_reset_password_path %>


</div>
</div>


