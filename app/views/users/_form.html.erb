<%= form_for @user do |f| %>
<div class="row">
<div class="col-md-6 col-md-offset-3">

    <%= f.label :first_name %>
    <%= f.text_field :first_name , class: 'form-control' %>
  

  
    <%= f.label :last_name %>
    <%= f.text_field :last_name ,class: 'form-control' %>
</div></div>
  <p>
    <%= f.label :user_name %>
    <%= f.text_field :user_name %>
  </p>

  <p>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit %>
  </p>
  
<%end%>